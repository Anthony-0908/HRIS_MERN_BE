{
  "compilerOptions": {
    "moduleResolution": "node", // Or "node16"
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "typeRoots": ["./node_modules/@types", "./@types"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
